<div class="container">
  <h1>All our flats (<%= @flats.count %>)</h1>
  <div class="row d-flex">
    <% @flats.each do |flat| %>
      <div class="card col-3 m-3 p-4">
        <h3><%= flat.name %></h3>
        <p><%= flat.address %></p>
        <span><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %> <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></span>
        <div class="card-buttom"></div> <%= link_to 'more info', flat_path(flat) %>
      </div>

    <% end %>

  </div>

</div>

